source 'https://rubygems.org'

gem 'sprockets'       # Assets pipeline, with:
gem 'eco'             # support for ECO javascript templating (jst.eco),
gem 'sass'            # support for SCSS stylesheets (css.scss),
gem 'coffee-script'   # support for Coffee Script (js.coffee),
gem 'rake'            # and support for `rake compile` task, which prepares production ready
gem 'uglifier'        # JS compressed SDK assets.

gem 'rack'            # Rack support (rackup devkit.ru)

gem 'therubyracer'      # JS runtime as required by CoffeeScript.
gem 'rack-slashenforce' # Make sure /foo/index.html can be accessed at /foo too.
gem 'rack-cors', :require => 'rack/cors' # Support for CORS headers
